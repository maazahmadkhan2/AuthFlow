# Firebase Configuration (Required for Firebase Authentication)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_APP_ID=your-firebase-app-id

# JWT Configuration (Required for email/password authentication)
JWT_SECRET=your-super-secure-jwt-secret-key-32-characters-minimum

# Session Configuration (Required)
SESSION_SECRET=your-super-secure-session-secret-key-32-characters-minimum

# Database Configuration (Optional - uses in-memory storage if not provided)
DATABASE_URL=mysql://username:password@localhost:3306/database_name
# OR individual database settings:
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your-password
# DB_NAME=authflow

# Server Configuration
PORT=5000
NODE_ENV=development

# Replit Authentication (Optional - only needed if running on Replit with Replit Auth)
# REPLIT_DOMAINS=your-repl-domain.replit.app
# REPL_ID=your-repl-id
# ISSUER_URL=https://replit.com/oidc